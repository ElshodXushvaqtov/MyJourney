<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyJourney"
        tools:targetApi="31">
        <activity
            android:name=".screens.PaymentScreen"
            android:exported="false"
            android:label="@string/title_activity_payment_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.ProfileScreen"
            android:exported="false"
            android:label="@string/title_activity_profile_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.SearchScreen"
            android:exported="false"
            android:label="@string/title_activity_search_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.DetailsScreen"
            android:exported="false"
            android:label="@string/title_activity_details_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.WelcomeScreen"
            android:exported="false"
            android:label="@string/title_activity_welcome_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.SignInScreen"
            android:exported="false"
            android:label="@string/title_activity_sign_in_screen"
            android:theme="@style/Theme.MyJourney" />
        <activity
            android:name=".screens.SplashScreen"
            android:exported="true"
            android:label="EasyJourney"
            android:theme="@style/Theme.MyJourney">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MyJourney" />
    </application>

</manifest>